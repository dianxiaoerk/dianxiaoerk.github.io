// Custom styles.
/* 设置根目录的font-size  用来做移动端布局适配 */
html{
  font-size: 190.3px;
}

/* 自适应样式 */
@media screen and (min-width:768px){
    /* 头部样式修改 */
  .header-inner{
    /* 头部标题logo字体样式修改 */
     width: 100%;
    padding: 25px 0 0;
    .site-meta {
      float: none;
      margin: 0;
      text-align: center 
    .custom-logo-site-title {
      text-align: center
       }
     }
     .site-title{
       font-size: 45px;
       transition: 0.5s
         }
      .site-title:hover{
        color: #ff6700;
        transform: scale(2);
        text-shadow:  5px 5px 5px gray
        }
  /* 导航条样式修改 */
  .site-nav{
      color: red;
    .menu{
      float: none;
      .menu-item a{
        padding: 0 5px;
        font-size: 18px
        }
     }
    }
  }

  /* 内容区域样式修改 */
  #main{
    .sidebar-toggle{
      border-radius: 5px;
    }
  }

   /* 置顶按钮样式 */
  .back-to-top{
      border-radius: 5px;
  }

  /* 底部样式修改 */
  #footer{
    user-select none
    .footer-inner{
      text-align: center;
      }
    }
  
  
}

/*整体样式*/

/* 文章外边框 */
.post {
  font-size: 12px;
  margin-top: 60px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

/* 音乐文章播放样式 */
#music{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 800px;
  height: 80px;
  border: 1px solid gray;
  margin: 0 auto;
  border-radius: 1em;
  /* 播放/暂停按钮容器 */
  .playWay{
    width: 60px;
    height: 60px;
    background: red;
    }
  .play{
    background: url('../../images/play.png');
    background-size: 100%;

    }
  .stop{
       background: url('../../images/stop.png');
       background-size: 100%;
      }
  .playControl{
    display: flex;
    justify-content: space-around;
    align-items center;
    width: 700px;
    height: 60px;
    background: #f2f2f2;
      .music-control{
        position relative
        width: 500px;
          .music-control-background, .music-control-playing{
            position absolute
            top: 50%
            transform: translateY(-50%)
            left: 0
            height: 3px;
            border-radius: 20px;
            }
            .music-control-background{
              width: 100%;
              background: red;
              }
            .music-control-playing{
              z-index: 20;
              width:0;
              background: #ff6700;
              .control-rediu{
                position absolute
                top: 50%;
                transform: translateY(-50%);
                right: -20px;
                width: 20px;
                height: 20px;
                background: #fff;
                border-radius: 50%
                }
              }
            
        }
    }
  }
  .comments .v{
    display: none
    }
 

